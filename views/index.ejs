<!DOCTYPE html>
<html>
<head>
    <title>MovieWeb</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
    </style>

    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
<div id="vanta-bg" style="width:100%; height:100vh;" class="flex justify-center items-center">

    <div class="border border-[#ff8820] rounded-xl flex w-fit flex-col items-center bg-[#00000080] h-fit">
        <h1 class="text-[#ff8820] font-bold mt-4">Movie Web Project</h1>

        <form action="/buscar" method="GET" class="flex mt-4 m-4 border border-[#ff8820] outline-none rounded">
            <label class="input">
                <svg class="h-[1em] opacity-50 text-[#ff8820]" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                    <g
                            stroke-linejoin="round"
                            stroke-linecap="round"
                            stroke-width="2.5"
                            fill="none"
                            stroke="currentColor"
                    >
                        <circle cx="11" cy="11" r="8"></circle>
                        <path d="m21 21-4.3-4.3"></path>
                    </g>
                </svg>

                <input
                    type="search"
                    name="q"
                    class="grow rounded-md px-2 py-1 text-[#ff8820]"
                    placeholder="Buscar pelÃ­culas..." />
            </label>

            <button type="submit" class="btn btn-neutral join-item text-[#ff8820]">Buscar</button>
        </form>
    </div>
</div>

<!-- Fondo Cool -->
<script src="https://cdn.jsdelivr.net/npm/three@0.160.0/build/three.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/vanta@latest/dist/vanta.dots.min.js"></script>
<script>
    VANTA.DOTS({
        el: "#vanta-bg",
        mouseControls: true,
        touchControls: true,
        gyroControls: false,
        minHeight: 200.00,
        minWidth: 200.00,
        scale: 1.00,
        scaleMobile: 1.00,
        size: 7.40,
        spacing: 53.00,
        showLines: false
    })
</script>
<!-- Fondo Cool -->

