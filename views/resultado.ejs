<!DOCTYPE html>
<html>
<head>
    <title>Resultado de la Búsqueda</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="navbar bg-base-100 shadow-sm">
      <div class="flex-none">
        <button class="btn btn-square btn-ghost">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block h-5 w-5 stroke-current"> <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path> </svg>
        </button>
      </div>
      <div class="flex-1">
        <a class="btn btn-ghost text-xl">Movie web</a>
      </div>
      <div class="flex-none">
        <button class="btn btn-square btn-ghost">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block h-5 w-5 stroke-current"> <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h.01M12 12h.01M19 12h.01M6 12a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0z"></path> </svg>
        </button>
      </div>
    </div>

<!-- name of each tab group should be unique -->
<div class="tabs tabs-box p-4">
    <input type="radio" name="my_tabs_3" class="tab" aria-label="Resultados" checked="checked" />
    <div class="tab-content bg-base-100 border-base-300 p-6">
        <h1 class="text-4xl p-4">Resultado de la Búsqueda</h1>

        <h2 class="text-2xl p-2">Peliculas</h2>
        <% if (movies.length === 0) { %>
            <p>No hay resultados.</p>
        <% } else { %>
            <ul>
                <% movies.forEach((movie) => { %>
                    <li><a href="/pelicula/<%= movie.id %>"><%= movie.name %></a></li>
                <% }); %>
            </ul>
        <% } %>
        <br>

        <h2 class="text-2xl p-2">Actores</h2>
        <% if (actors.length === 0) { %>
            <p>No hay resultados.</p>
        <% } else { %>
            <ul>
                <% actors.forEach((actor) => { %>
                    <li><a href="/actor/<%= actor.id %>"><%= actor.name %></a></li>
                <% }); %>
            </ul>
        <% } %>
        <br>

        <h2 class="text-2xl p-2">Directores</h2>
        <% if (directors.length === 0) { %>
            <p>No hay resultados.</p>
        <% } else { %>
            <ul>
                <% directors.forEach((director) => { %>
                    <li><a href="/director/<%= director.id %>"><%= director.name %></a></li>
                <% }); %>
            </ul>
        <% } %>
        <br>
    </div>

    <input type="radio" name="my_tabs_3" class="tab" aria-label="Peliculas" />
    <div class="tab-content bg-base-100 border-base-300 p-6">
        <h2 class="text-2xl p-2">Peliculas</h2>
        <% if (movies.length === 0) { %>
            <p>No hay resultados.</p>
        <% } else { %>
            <ul>
                <% movies.forEach((movie) => { %>
                    <li><a href="/pelicula/<%= movie.id %>"><%= movie.name %></a></li>
                <% }); %>
            </ul>
        <% } %>
    </div>

    <input type="radio" name="my_tabs_3" class="tab" aria-label="Actores"/>
    <div class="tab-content bg-base-100 border-base-300 p-6">
        <h2 class="text-2xl p-2">Actores</h2>
        <% if (actors.length === 0) { %>
            <p>No hay resultados.</p>
        <% } else { %>
            <ul>
                <% actors.forEach((actor) => { %>
                    <li><a href="/actor/<%= actor.id %>"><%= actor.name %></a></li>
                <% }); %>
            </ul>
        <% } %>
        <br>
    </div>

    <input type="radio" name="my_tabs_3" class="tab" aria-label="Directores" />
    <div class="tab-content bg-base-100 border-base-300 p-6">
        <h2 class="text-2xl p-2">Directores</h2>
        <% if (directors.length === 0) { %>
            <p>No hay resultados.</p>
        <% } else { %>
            <ul>
                <% directors.forEach((director) => { %>
                    <li><a href="/director/<%= director.id %>"><%= director.name %></a></li>
                <% }); %>
            </ul>
        <% } %>
        <br>
    </div>
</div>

<div id="inicio"><a href="/">Inicio</a></div>
</body>
</html>
