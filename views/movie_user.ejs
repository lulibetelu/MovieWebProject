<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Perfil de <%= user.username %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/daisyui@3.2.2/dist/full.css" rel="stylesheet">
</head>
<body class="bg-gray-100">

<div class="min-h-screen flex flex-col items-center justify-center p-4">
    <div class="card w-full max-w-xl bg-white shadow-xl rounded-xl p-6">
        <h1 class="text-3xl font-bold text-center mb-6">
            Perfil de <span class="text-primary"><%= user.username %></span>
        </h1>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
            <div class="p-4 bg-gray-50 rounded-lg shadow-sm">
                <h2 class="text-lg font-semibold">Email</h2>
                <p class="text-gray-700"><%= user.email %></p>
            </div>
            <% if(user.created_at){ %>
                <div class="p-4 bg-gray-50 rounded-lg shadow-sm">
                    <h2 class="text-lg font-semibold">Fecha de registro</h2>
                    <p class="text-gray-700"><%= user.created_at %></p>
                </div>
            <% } %>
        </div>

        <div class="grid grid-cols-2 gap-6 text-center mb-6">
            <div class="p-6 bg-primary text-white rounded-xl shadow-lg hover:shadow-xl transition duration-300">
                <h3 id="ratedMovies" class="text-2xl font-bold">0</h3>
                <p class="mt-2 text-sm">Películas calificadas</p>
            </div>
            <div class="p-6 bg-secondary text-white rounded-xl shadow-lg hover:shadow-xl transition duration-300">
                <h3 id="writtenReviews" class="text-2xl font-bold">0</h3>
                <p class="mt-2 text-sm">Reseñas escritas</p>
            </div>
        </div>

        <div class="mt-6 flex justify-center gap-4">
            <a href="/" class="btn btn-outline btn-primary">Volver al inicio</a>
            <a href="/logout" class="btn btn-primary">Cerrar sesión</a>
        </div>
    </div>
</div>

<script>
    // Función para animar los contadores
    function animateCounter(id, target) {
        const el = document.getElementById(id);
        let count = 0;
        const increment = Math.ceil(target / 100); // 100 pasos
        const interval = setInterval(() => {
            count += increment;
            if (count >= target) {
                count = target;
                clearInterval(interval);
            }
            el.textContent = count;
        }, 15); // cada 15ms
    }

    // Animar ambos contadores al cargar la página
    document.addEventListener('DOMContentLoaded', () => {
        animateCounter('ratedMovies', <%= user.ratedMovies %>);
        animateCounter('writtenReviews', <%= user.writtenReviews %>);
    });
</script>

</body>
</html>
