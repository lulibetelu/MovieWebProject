---
import AuthLayout from "../../layouts/AuthLayout.astro";
---

<AuthLayout title="Registrarse">
    <main class="flex items-center justify-center min-h-screen bg-base-200">
        <div class="card w-full max-w-md shadow-xl bg-base-100 p-8">
            <h1 class="text-2xl font-bold text-center mb-6">
                Crear una cuenta
            </h1>

            <form action="/auth/register" method="POST" class="space-y-4">
                <div class="form-control">
                    <label for="username">
                        <span class="label-text">Usuario</span>
                    </label>
                    <input
                        id="username"
                        name="username"
                        type="text"
                        required
                        placeholder="Tu username"
                        class="input input-bordered w-full"
                    />
                </div>

                <div class="form-control">
                    <label for="email">
                        <span class="label-text">Email</span>
                    </label>
                    <input
                        id="email"
                        name="email"
                        type="email"
                        required
                        placeholder="Tu email"
                        class="input input-bordered w-full"
                    />
                </div>

                <div class="form-control">
                    <label for="password">
                        <span class="label-text">Contraseña</span>
                    </label>
                    <input
                        id="password"
                        name="password"
                        type="password"
                        required
                        placeholder="Tu contraseña"
                        class="input input-bordered w-full"
                    />
                </div>

                <div class="form-control mt-4">
                    <button type="submit" class="btn btn-primary w-full"
                        >Registrarse</button
                    >
                </div>
            </form>

            <div class="divider">o</div>

            <p class="text-center">
                ¿Ya tenés una cuenta?
                <a href="/auth/login" class="text-primary font-semibold"
                    >Iniciar sesión</a
                >
            </p>
        </div>
    </main>
</AuthLayout>
